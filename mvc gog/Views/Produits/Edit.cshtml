@model mvc_gog.Models.Produit

@{
    ViewData["Title"] = "Edit";
}


<section class="section hero" id="home" aria-label="home">
    <div class="container">

        <div class="hero-content">


            <h1 class="h1 hero-title">
                Games don't make you violent, <span class="span"> lag </span> does.
            </h1>

            <button class="btno btn skewBg">Read More</button>

        </div>

        <figure class="hero-banner img-holder" style="--width: 700; --height: 700;">
            <img src="~/css/Images/hero-banner.png" width="700" height="700" alt="hero banner" class="w-100">
        </figure>

    </div>
</section>

<main>
    <article>
        <section class="sectiong featured-games" style="background-color: var(--raisin-black-3);" id="features" aria-label="featured game">

            

                <div class="frmcontainer">
                <h1 class="form-header"> Edit games</h1>

        

                    <form asp-action="Edit">

                        <div asp-validation-summary="ModelOnly" class="frminput-box"></div>
                        <input type="hidden" asp-for="ProduitID" />


                        <div class="form-group">
                            <label asp-for="imageurl" class="frmtitle-label" id="name-label"></label>
                            <input asp-for="imageurl" class="form-control text-light frminput-text" placeholder="Enter the Game image url"
                                   style="background-color: transparent; border: 1px solid white" />
                            <span asp-validation-for="imageurl" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="Prodname" class="frmtitle-label"></label>
                        <input asp-for="Prodname" class="form-control text-light frminput-text" placeholder="Enter the Game Name"
                                   style="background-color: transparent; border: 1px solid white" />
                            <span asp-validation-for="Prodname" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="Price" class="frmtitle-label"></label>
                        <input asp-for="Price" class="form-control text-light frminput-text" placeholder="Enter the Game Price"
                                   style="background-color: transparent; border: 1px solid white" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="Dateofcreation" class="frmtitle-label"></label>
                        <input asp-for="Dateofcreation" type="date" class="form-control text-light frminput-text"
                                   style="background-color: transparent; border: 1px solid white" />
                            <span asp-validation-for="Dateofcreation" class="text-danger"></span>
                        </div>



                        <div class="form-group">
                            <label asp-for="desc" class="frmtitle-label"></label>
                        <input asp-for="desc" class="form-control text-light frminput-text" placeholder="Enter the Game description"
                                   style="background-color: transparent; border: 1px solid white" />
                            <span asp-validation-for="desc" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="Autor" class="frmtitle-label"></label>
                        <input asp-for="Autor" class="form-control text-light frminput-text" placeholder="Enter the Game Autor's name"
                                   style="background-color: transparent; border: 1px solid white" />
                            <span asp-validation-for="Autor" class="text-danger"></span>
                        </div>


                    <div class="BTNS">
                     
                                <a asp-route-id="@Model.ProduitID"> <input type="submit" value="Save" class="SUB-button" /></a>
                                <a asp-action="Delete" asp-route-id="@Model.ProduitID">
                                    <input type="button" class="DEL-button"
                                           value="Delete">
                                </a>
                                
                                <a asp-action="Index"> <input type="button" class="BTL-button" value="Back to List" /></a>
                              
                        </div>
                    </form>
                </div>


        </section>

    </article>
</main>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
