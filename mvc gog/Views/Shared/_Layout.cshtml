                    {
                        @if (User.IsInRole("admin"))
                        {




                            <ul class="navbar-list">

                                <li class="navbar-item">

                                    <a class="navbar-link skewBg" asp-area="" asp-controller="Produits" asp-action="Index">Games</a>
                                </li>


                                <li class="navbar-item">
                                    <a class="navbar-link skewBg" asp-area="" asp-controller="Produits" asp-action="Create">add Games</a>
